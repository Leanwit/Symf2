{% extends 'FacturaBundle::layout.html.twig' %}

{% block body %}
<!-- Static navbar -->

<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h3>Factura</h3>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Numerofactura</th>
                    <td>{{ entity.numeroFactura }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td>{{ entity.total }}</td>
                </tr>

            </tbody>
        </table>
        <br><br>
        Detalle: 
        <table class="detalle" style="border: 1px solid black; ">
            <tr>
                <th> Producto </th>
                <th> Cantidad </th> 
            </tr>
{% for detalle in entity.detalles %}
            <tr>
                <th>{{ detalle.producto|e }}</th>
                <th>{{ detalle.cantidad|e }}</th>
            </tr>
{% endfor %}
        </table><br>
        <table>
                <tr>
                    <td><a class="btn btn-sm btn-primary" type="button" href="{{ path('factura') }}">Volver al listado </a></td> 
                    <td><a class="btn btn-sm btn-primary" type="button" href="{{ path('factura_edit', { 'id': entity.id }) }}">Editar</a></td>                    
                    <td>{{ form(delete_form)}}</td>
                </tr>
        </table>  
    </div>
</div> <!-- /container -->

{% endblock %}
