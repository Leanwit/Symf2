{% extends '::base.html.twig' %}
{%block javascripts %}
{{ parent() }}
{{ form_javascript(form) }}
<script>
    jQuery(document).ready(function($) {
        $("#factura_provincia").change(function() {
            var data = {
                provincia_id: $(this).val()
            };
            $.ajax({
                type: 'post',
                url: '{{ path("seleccionar_localidad") }}',
                data: data,
                success: function(data) {
                    $('#factura_localidad').html(data);
                }
            });
        });
    });
    $(function() {
        $("#dialog").dialog({
            modal: true
        });
    });
    </script>
