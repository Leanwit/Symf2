{% extends 'FacturaBundle::layout.html.twig' %}

{% block body %}

<div class="container">
<form action="{{path('factura') }}" method="post" {{ form_enctype(filter_form)}}
      {{form_widget (filter_form)}}
      
      <div class="container"><button type="submit"><i class="search"></i> Buscar </button></div>
 </form>
 </div>
<div class="container">
