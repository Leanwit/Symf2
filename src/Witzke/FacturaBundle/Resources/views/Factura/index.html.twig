{% extends 'FacturaBundle::layout.html.twig' %}

{% block body %}
<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numerofactura</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('factura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.numeroFactura }}</td>
