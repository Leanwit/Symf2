    <div class="jumbotron">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numerofactura</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('factura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.numeroFactura }}</td>
                        <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.total }}</td>
                        <td>
                            <ul>
                                <li class="sinPunto">
                                    <button type="button" class="btn btn-default">
                                        <a class="glyphicon glyphicon-search" href="{{ path('factura_show', { 'id': entity.id }) }}"></a>
                                    </button>
                                </li>
                                <li class="sinPunto">
                                    <button type="button" class="btn btn-default">
                                     <a class="glyphicon glyphicon-edit"href="{{ path('factura_edit', { 'id': entity.id }) }}"></a>
                                    </button>
                                </li>
                            </ul>
                        </td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>

            <ul>
                <li class="sinPunto">
