{% extends 'FacturaBundle::layout.html.twig' %}

{% block body %}
<!-- Static navbar -->

<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>Detalle</h1>

       <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Cantidad</th>
                    <td>{{ entity.cantidad }}</td>
                </tr>
            </tbody>
        </table>
           <table>
                <tr>
                    <td><button class="btn btn-small btn-primary" type="button" href="{{ path('detalle') }}">Volver al listado </button></td> 
                    <td><button class="btn btn-small btn-primary" type="button" href="{{ path('detalle_edit', { 'id': entity.id }) }}">Editar</button></td>
                    <td>{{ form(delete_form) }}</td>        
                </tr>
        </table>         
    </div>
</div> <!-- /container -->

{% endblock %}
