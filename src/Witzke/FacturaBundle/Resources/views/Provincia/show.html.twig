{% extends 'FacturaBundle::layout.html.twig' %}

{% block body %}

<div class="container">
    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>Provincia</h1>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.nombre }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a class="btn btn-lg btn-primary" href="{{ path('provincia') }}">
                    Volver al listado
                </a>
            </li>
            <li>
                <a class="btn btn-lg btn-primary" href="{{ path('provincia_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>        
    </div>
</div> <!-- /container -->

{% endblock %}
